<section class="form">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 login-image">
        <img
          src="/images/bicycles-page-rockfire-ridge-29.webp"
          class="img-fluid rounded"
          alt=""
          onclick="location.href = 'http://localhost:3000/home'"
        />
      </div>
      <div class="col-lg-6 d-flex justify-content-center position-relative">
        <div style="width: 460px;">
          <div class="d-flex justify-content-center logo">
            <img src="/images/clipart1345268.png" width="90px" alt="" />
          </div>
          <div class="d-flex justify-content-center mt-2 mb-2 fs-3">
            <span>
              Enter Phone 
            </span>
          </div>

          <form  action="/submit_email"  method="POST">
            {{#if usernotExist}}
            <div class="warning">
                <div class="warning-msg d-flex">
                  <span class=" text-danger">
                    User Not Exist <a href="http://localhost:3000/user_signup">Sign UP</a>
                  </span>
                </div>
              </div>
              {{else}}
              <div class="warning">
                <div class="warning-msg d-flex">
                  <span class="form-empty-login form-empty">
                    Enter  the Field
                  </span>
                </div>
              </div>
             {{/if}}
              
            <div class="col-lg-12">
              <input
                type="text"
                name="Email"
                id="registered-email"
                placeholder="Enter Your Registered email*"
              />
            </div>
            <div class="col-lg-12">
            <button
            type="submit"
            class="btn btn-dark mt-4 ms-1"
            style="width: 150px;"
                
              >
                Send Otp
              </button>
            </div>
          </form>
          
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  const form = document.querySelector('form') 
  const emptyForm = document.querySelector(".form-empty-login")
  const email = document.getElementById("registered-email")

  const emailRegex = /^[a-zA-Z0-9]+@[a-zA-Z0-9]+\.[a-zA-Z]{2,}$/;
  form.addEventListener('submit' ,(event) => {
    
    if(email.value.trim() === "" ){
       validateOtp(emptyForm,event);
    }else{
       if(!emailRegex.test(email.value)){
            emptyForm.innerHTML = "Enter a Valid Email"
            validateOtp(emptyForm,event);
            setTimeout(() => {
              emptyForm.innerHTML = "Enter the field"
            },1000)
       }else{

        
       }
    }
   
  })
  
function validateOtp(notValidOtp,event) {
    event.preventDefault()
  notValidOtp.classList.add('valid')
  setTimeout(() => {

    notValidOtp.classList.remove('valid');

 },800)

  }
</script>