<section class="form">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 login-image">
        <img
          src="/images/bicycles-page-rockfire-ridge-29.webp"
          class="img-fluid rounded"
          alt=""
          onclick="location.href = '/home'"
        />
      </div>
      <div class="col-lg-6 d-flex justify-content-center position-relative">
        <div style="width: 460px;">
          <div class="d-flex justify-content-center logo">

            <img
              onclick="location.href = '/home'"
              src="/images/clipart1345268.png"
              width="90px"
              alt=""
            />
          </div>
          <div class="d-flex justify-content-center mt-2 mb-2 fs-3">
            <span>Account Login</span>
          </div>
          <form action="user_signin" method="POST">
            {{#if userNotExist}}
              <div class="warning">
                <div class="warning-msg">
                  <span class="text-danger">User not exist
                    <a href="/user_signup">Sign Up</a></span>
                </div>
              </div>
            {{else}}

              {{#if invalidUser}}
                <div class="warning">
                  <div class="warning-msg">
                    <span class="text-danger">Invalid Credentials Try forgot
                      password
                    </span>
                  </div>
                </div>
              {{else}}
                {{#if blockedUser}}
                  <div class="warning">
                    <div class="warning-msg">
                      <span class="text-danger">Access denied
                        <a href="/get_in_touch">Get in touch With us</a>
                      </span>
                    </div>
                  </div>
                {{else}}
                  <div class="warning">
                    <div class="warning-msg d-flex">
                      <span class="form-empty-login form-empty">Fill the form</span>
                      <span class="choose-method form-empty">choose any one
                        method
                      </span>
                    </div>
                  </div>
                {{/if}}
              {{/if}}
            {{/if}}
            <div class="col-lg-12">
              <input
                type="text"
                name="email"
                id="email-login"
                placeholder="Email Address*"
              />
            </div>
            <div class="warning">
              <div class="warning-msg">
                <span class="notvalid-email-login notvalid-email">Email not
                  valid</span>
              </div>
            </div>
            <div class="col-lg-12">
              <input
                type="password"
                name="password"
                id="password-login"
                placeholder="Password*"
              />
            </div>

            <div class="warning my-2">
              <div class="warning-msg">
                <span
                  class="notvalid-password-login password-warning notvalid-password"
                >password not valid [$%^*+/a-b/1-10]
                </span>
                <span class="text-nowrap forgot-password"><a
                    href="/submit_email"
                  >Forget password?</a></span>
              </div>
            </div>
            <div class="col-lg-12">
              <button
                type="submit"
                class="btn text-white btn-danger button-create"
              >Login</button>
            </div>
            <div>
              <span
                style="color: gray;"
                class="my-2"
              >------------------------or------------------------</span>
            </div>
            <div class="col-lg-12">
              <input
                type="text"
                id="emailotp-login"
                placeholder="Registered Email*"
                name="Emailotp"
              />
            </div>

            <div class="warning">
              <div class="warning-msg">
                <span class="notvalid-emailotp-login notvalid-number">Not valid
                  Email</span>
              </div>
            </div>
            <div class="col-lg-12">
              <button
                type="submit"
                class="btn text-white btn-danger button-create"
              >Login with OTP</button>
            </div>
            <div class="col-lg-12 my-3" style="color: gray;">
              <span>New to myBycyle.com?</span>
            </div>
            <div class="col-lg-12">
              <button
                type="button"
                onclick="window.location.href='/user_signup'"
                class="btn text-white btn-dark button-create"
              >Create new Account</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>