<section>
  <div class="profile-container pb-3">
    <label class="mt-5 mb-2 label fs-5">YOUR PROFILE</label>
    <div class="profile mb-3">
      <!-- -->
      <div class="user-details-container">
        <div class="user-details">
          <span><i class="user-icon fa-regular fa-user"></i></span><br />
          <label>{{userInfo.fname}} {{userInfo.lname}}</label><br />
          <label> {{userInfo.email}}</label><br />
          <label>{{#each userInfo.phone}}{{this}}{{/each}}</label>

        </div>
        <div class="user-edit-buttons">
          <button
            id="user-profile-change-password"
            data-user-id="{{userInfo._id}}"
            class="btn btn-danger fw-bold"
          >CHANGE PASSWORD
          </button><br />
          <button
            class="btn fw-bold edit-profile btn-outline-dark"
            id="my-orders"
            data-user-id="{{userInfo._id}}"
          >
            MY ORDERS
          </button><br />
          <button
            class="btn fw-bold btn-danger"
            id="edit-profile"
            data-user-id="{{userInfo._id}}"
          >EDIT PROFILE
          </button>

        </div>
      </div>
      <div class="mt-3" style="border: 1px solid #AEABAB;"></div>
      <label class="address-tag my-2">ADDRESSES</label>
      <div>
        <div class="row">
          {{#if address}}
            {{#each address}}
              <div class="col-md-6 col-sm-6 col-lg-4 p-2">
                <div class="address">
                  <div class="address-info">
                    <label>
                      {{this.homeAddress}},{{this.city}},{{this.locality}}
                      <br />,
                      {{this.state}},{{this.district}},
                      {{this.postalCode}}
                    </label>
                  </div>
                  <div class="d-flex justify-content-between">
                    <div>
                      <input
                        class="form-check-input me-1"
                        type="radio"
                        name="flexRadioDefault"
                        id="flexRadioDefault1"
                        onchange="setAsprimary('{{this._id}}')"
                        {{#if this.isPrimary}}
                        checked
                        {{/if}}
                      />
                      <label
                        class="text-nowrap form-check-label"
                        for="flexRadioDefault1"
                      >
                        Set primary
                      </label>
                    </div>
                    <div>
                      <i
                        id="remove-address"
                        data-address-id="{{this._id}}"
                        class="text-danger me-3 fa-solid fa-trash"
                      ></i>
                      <i
                        id="edit-address"
                        class="fa-solid fa-pen-to-square"
                        data-address-id="{{this._id}}"
                      ></i>
                    </div>

                  </div>

                </div>
              </div>
            {{/each}}
          {{else}}
            <span class="text-danger fw-bold ms-1">ADDRESS NOT ADDED </span>
          {{/if}}

        </div>
      </div>
      <div class="mt-2">
        <Button
          id="user-add-address"
          data-user-id="{{userInfo._id}}"
          class="btn fw-bold btn-outline-dark"
        >ADD ADDRESS</Button>
      </div>
      <div class="mt-4" style="border: 1px solid #AEABAB;"></div>
      <label class="address-tag my-2">WALLET</label>
      <div class="row">
        <div class="d-flex align-items-center col-md-6">
          <i class="fa-solid wallet fa-wallet me-2"></i>
          <span class="wallet-balance">Balance Amount:<span
              id="wallet-balance-amount"
            >
              â‚¹{{walletBalance.balance}}</span></span>
        </div>
        <div class="col-md-6 wallet-buttons">
          <div class="user-edit-buttons">
            <button
              id="wallet-history"
              data-user-id={{userInfo._id}}
              class="btn btn-danger fw-bold"
            >WALLET HISTORY</button>
            <button
              id="add-money-button"
              data-user-id="{{userInfo._id}}"
              class="btn btn-outline-dark fw-bold"
            >ADD MONEY</button>
          </div>
        </div>
      </div>
      <div class="mt-4" style="border: 1px solid #AEABAB;"></div>
      <div class="mb-3 mt-4">
        <button id="logout" class="btn btn-danger fw-bold">LOG OUT</button>
      </div>

    </div>
  </div>
</section>