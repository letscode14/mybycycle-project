<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{#if showProfile}}Show Profile {{else}} Login {{/if}}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.11/cropper.min.css"
      rel="stylesheet"
    />
    {{#if adminUser}}
      <link rel="stylesheet" href="/style/admin_user.css" />
      <link rel="stylesheet" href="/style/admin_dashboard.css" />

    {{else}}
      {{#if user}}

        <link rel="stylesheet" href="/style/show_profile.css" />

        <link rel="stylesheet" href="/style/product_details.css" />
        <link rel="stylesheet" href="/style/show_cart.css" />
        <link rel="stylesheet" href="/style/user_checkout.css" />
        <link rel="stylesheet" href="/style/myorders.css" />
        <link rel="stylesheet" href="/style/viewOrder.css" />
        <link rel="stylesheet" href="/style/edit_profile.css" />
        <link rel="stylesheet" href="/style/wishlist.css" />
        <link rel="stylesheet" href="/style/wallet_history.css">
        <link rel="stylesheet" href="/style/track_order.css">
        <link rel="stylesheet" href="/style/get_in_touch.css">
      {{else}}
        <link rel="stylesheet" href="/style/form.css" />
      {{/if}}
    {{/if}}
    {{#if bannerPage}}
      <link rel="stylesheet" href="/style/banner.css" />
    {{else}}
    {{/if}}

    {{#if home}}
      <link rel="stylesheet" href="/style/home_page.css" />
    {{/if}}

    {{#if orderSuccess}}
      <style>
        body { background-color: red; color: white; display: flex; align-items:
        center; justify-content: center; height: 100vh; margin: 0; } @keyframes
        tickAnimation { 0% { transform: scale(0); opacity: 0; } 100% {
        transform: scale(1); opacity: 1; } } .tick { font-size: 5em; animation:
        tickAnimation 1s ease-out; margin-right: 10px; } p { margin-top: 20px;
        font-size: 24px; }
      </style>
    {{else}}
      {{#if adminUser}}{{else}}
        <link rel="stylesheet" href="/style/prduct_list.css" />
      {{/if}}
      <style>
        body { font-family: 'Roboto', sans-serif; }

      </style>
    {{/if}}
  
  </head>
  <body>

    {{#if adminUser}}
      {{> admin_partials}}
    {{else}}
      {{#if user}}
        {{> user_partials}}
      {{else}}
      {{/if}}
    {{/if}}

    {{{body}}}

    {{#if user}}
      {{> user_footer}}
    {{/if}}
    <!-- CDN for cropping image -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.11/cropper.min.js"
    ></script>
    <!-- Bootstrap JS and Popper.js scripts (for dropdowns, modals, etc.) -->
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    ></script>
    <!-- script for sending ajax request -->
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <!-- DataTables and Responsive scripts -->
    <script
      src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"
    ></script>
    <script
      src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"
    ></script>
    <script
      src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"
    ></script>
    <script
      src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"
    ></script>

    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <!-- chart implementation-->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- DataTable initialization -->

    <!-- other scripts (form validation etc
    ) -->
    {{#if adminUser}}
      <script src="/script/adminUtilities.js"></script>
      <script src="/script/adminActions.js"></script>
    {{/if}}
      {{#if signupPage}}
        <script src="/script/signuptvalidation.js"></script>
      {{else}}
        {{#if loginPage}}
          <script src="/script/siginvalidation.js"></script>
        {{else}}
          {{#if adminLogin}}
            <script src="/script/adminSigninValidation.js"></script>
          {{else}}
            {{#if addCategory}}
              <script src="/script/addCategory.js"></script>
            {{else}}
              {{#if addProducts}}
                <script src="/script/addProducts.js"></script>
              {{else}}
                {{#if editProduct}}

                  <script src="/script/editProduct.js"></script>
                {{else}}
                  {{#if editCategory}}
                    <script src="/script/addCategory.js"></script>
                  {{else}}
                    {{#if addBanner}}
                      <script src="/script/addBanner.js"></script>
                    {{else}}
                      {{#if addCoupon}}
                      <script src="/script/addCoupon.js"></script>
                      {{else}}
                        <script src="/script/adminChart.js"></script>
                      {{/if}}
                    {{/if}}
                  {{/if}}
                {{/if}}
              {{/if}}
            {{/if}}
          {{/if}}
        {{/if}}
      {{/if}}
    
    {{#if user}}
      <script src="/script/userUtilities.js"></script>
      

    {{/if}}
    <script src="/script/userActions.js"></script>
    <script src="/script/helper.js"></script>
  </body>
</html>